# Environment variables template for Agent Engine
# Copy to .env and fill in actual values
# IMPORTANT: Never commit .env to version control

# Python configuration
PYTHONPATH=.
PYTHONUNBUFFERED=1

# Agent Engine configuration
AGENT_ENGINE_ENV=development
AGENT_ENGINE_CONFIG_DIR=config
LOG_LEVEL=INFO

# API Keys and Credentials
# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=agent
DATABASE_PASSWORD=your-password-here
DATABASE_NAME=agent_engine
DATABASE_URL=postgresql://agent:your-password-here@localhost:5432/agent_engine

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# GCP (optional)
GCP_PROJECT_ID=
GCP_CREDENTIALS_FILE=

# Telemetry and Monitoring
TELEMETRY_ENABLED=true
METRICS_PORT=8000
METRICS_PATH=/metrics

# Logging
LOG_FORMAT=json
LOG_DIR=logs

# Runtime Configuration
MAX_WORKERS=4
TASK_TIMEOUT=300
RETRY_ATTEMPTS=3

# Deployment
DEPLOYMENT_ENV=development
DEPLOYMENT_ID=dev-001

# Feature Flags
ENABLE_PLUGINS=true
ENABLE_CACHE=true
ENABLE_PROFILING=false

# Performance Tuning
BUFFER_SIZE=1000
QUEUE_SIZE=100
CONNECTION_POOL_SIZE=10

# Custom Service (example)
CUSTOM_SERVICE_URL=https://api.example.com
CUSTOM_SERVICE_API_KEY=your-custom-api-key
