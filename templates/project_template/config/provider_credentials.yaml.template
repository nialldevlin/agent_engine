# Provider credentials template for Agent Engine
# Copy to provider_credentials.yaml and fill in actual values
# IMPORTANT: Never commit provider_credentials.yaml to version control

providers:
  anthropic:
    api_key: "${ANTHROPIC_API_KEY}"
    organization_id: null  # Optional
    max_retries: 3
    timeout: 30

  openai:
    api_key: "${OPENAI_API_KEY}"
    organization_id: null  # Optional
    max_retries: 3
    timeout: 30

  database:
    type: "postgresql"
    host: "${DATABASE_HOST:-localhost}"
    port: "${DATABASE_PORT:-5432}"
    user: "${DATABASE_USER}"
    password: "${DATABASE_PASSWORD}"
    database: "${DATABASE_NAME:-agent_engine}"
    pool_size: 5
    timeout: 30

  redis:
    host: "${REDIS_HOST:-localhost}"
    port: "${REDIS_PORT:-6379}"
    password: "${REDIS_PASSWORD}"
    db: 0
    ssl: false

  aws:
    access_key: "${AWS_ACCESS_KEY_ID}"
    secret_key: "${AWS_SECRET_ACCESS_KEY}"
    region: "${AWS_REGION:-us-east-1}"

  gcp:
    project_id: "${GCP_PROJECT_ID}"
    credentials_file: "${GCP_CREDENTIALS_FILE}"

  custom_service:
    api_key: "${CUSTOM_SERVICE_API_KEY}"
    base_url: "${CUSTOM_SERVICE_URL}"
    timeout: 30
